    "dotBackground": {
      "type": "string",
      "style": [
        {
          "selector": "{{WRAPPER}} .swiper .swiper-pagination .swiper-pagination-bullet { background-color: {{VALUE}}; }"
        }
      ]
    },
    "dotBorder": {
      "type": "object",
      "default": {
        "border": 1,
